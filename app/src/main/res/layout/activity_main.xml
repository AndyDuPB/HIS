<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:ignore="MissingConstraints"
    android:background="@drawable/background"
    tools:context=".HomeSteadInformationActivity">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical">

        <GridLayout
            android:id="@+id/mainContainer"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:rowCount="2"
            android:columnCount="2"
            android:paddingStart="44dp"
            android:paddingEnd="0dp"
            android:paddingLeft="44dp"
            android:paddingRight="0dp"
            android:paddingTop="16dp"
            android:paddingBottom="0dp"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/btnModule"
                android:layout_width="128dp"
                android:layout_height="128dp"
                android:layout_margin="10dp"
                android:src="@mipmap/module128_128"
                android:background="#00000000"
                android:contentDescription="@string/module_setting_desc">
            </ImageButton>

            <ImageButton
                android:id="@+id/btnHomeStead"
                android:layout_width="128dp"
                android:layout_height="128dp"
                android:layout_margin="10dp"
                android:src="@mipmap/homestead128_128"
                android:background="#00000000"
                android:contentDescription="@string/homestead_setting_desc">
            </ImageButton>

            <ImageButton
                android:id="@+id/btnSettings"
                android:layout_width="128dp"
                android:layout_height="128dp"
                android:layout_margin="10dp"
                android:src="@mipmap/setting128_128"
                android:background="#00000000"
                android:contentDescription="@string/setting_desc">
            </ImageButton>

            <ImageButton
                android:id="@+id/btnAbout"
                android:layout_width="128dp"
                android:layout_height="128dp"
                android:layout_margin="10dp"
                android:src="@mipmap/about128_128"
                android:background="#00000000"
                android:contentDescription="@string/about_desc">
            </ImageButton>

        </GridLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="bottom"
            android:layout_gravity="right"
            android:orientation="horizontal">
            <ImageButton
                android:id="@+id/btnExit"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="0dp"
                android:layout_marginBottom="0dp"
                android:contentDescription="@string/exit_desc"
                android:background="#00000000"
                android:src="@mipmap/exit"/>
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>